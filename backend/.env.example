# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_PATH=./uploads/
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,txt,doc,docx

# Security Configuration
BCRYPT_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME=1800000  # 30 minutes in ms

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=5242880  # 5MB

# Geo IP Configuration
GEOIP_UPDATE_SCHEDULE=0 2 * * 1  # Every Monday at 2 AM

# SLA Configuration (in minutes)
SLA_P1_RESPONSE_TIME=60      # 1 hour
SLA_P2_RESPONSE_TIME=240     # 4 hours  
SLA_P3_RESPONSE_TIME=1440    # 24 hours

# Cron Job Schedule
WAZUH_SYNC_SCHEDULE=*/5 * * * *      # Every 5 minutes
SLA_CHECK_SCHEDULE=*/10 * * * *      # Every 10 minutes
DAILY_REPORT_SCHEDULE=0 9 * * *      # Daily at 9 AM
CLEANUP_SCHEDULE=0 0 * * 0           # Weekly on Sunday

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090