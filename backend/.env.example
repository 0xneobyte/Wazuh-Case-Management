# Environment Configuration
NODE_ENV=development
PORT=5000

# Frontend URL (for email links and CORS)
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/wazuh-case-management

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="Wazuh Case Management <your-email@gmail.com>"

# Wazuh API Configuration
WAZUH_API_URL=https://localhost:55000
WAZUH_API_USERNAME=wazuh-wui
WAZUH_API_PASSWORD=MyS3cr37P450r.*-

# AI Configuration (OpenAI)
OPENAI_API_KEY=your-openai-api-key-here

# Logging Configuration
LOG_LEVEL=info

# Timezone for cron jobs
TIMEZONE=UTC

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME=15

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,png,jpg,jpeg,gif

# Geo IP Configuration (for enhanced geo-location features)
# You can use MaxMind GeoIP or similar services
GEOIP_DATABASE_PATH=./data/GeoLite2-City.mmdb

# External API Keys (optional integrations)
VIRUSTOTAL_API_KEY=your-virustotal-api-key
SHODAN_API_KEY=your-shodan-api-key

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30

# Performance Configuration
DB_POOL_SIZE=10
CACHE_TTL=300

# Development/Testing Configuration
ENABLE_API_DOCS=true
MOCK_EMAIL_SERVICE=false
SKIP_EMAIL_VERIFICATION=true